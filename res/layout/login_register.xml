<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:orientation="vertical" 
	android:background="@drawable/image15">
	<TextView android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:paddingTop="10dp"
		android:paddingBottom="3dp"
		android:layout_marginBottom="10dp"
		android:text="注册"
		android:gravity="center_horizontal" 
		android:textSize="20sp"
		android:textColor="#000000" />
	<LinearLayout android:orientation="vertical" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="1.0">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginTop="14dp"
			android:gravity="center_horizontal" >
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_marginLeft="28dp"
				android:text="登录账号:"
				android:textSize="14sp"
				android:textColor="#000000"/>
			<EditText android:id="@+id/AccountNumber" 
		    	android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"	
				android:layout_marginRight="28dp"			
				android:singleLine="true"/>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginTop="14dp">
			<TextView android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="28dp"
			    android:text="登录密码:"
			    android:textColor="#000000"
			    android:textSize="14sp"/>
			<EditText android:id="@+id/Password" 
		    	android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:layout_weight="1.0"
				android:layout_marginRight="28dp"	
				android:password="true"
				android:singleLine="true"/>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginTop="14dp">
			<TextView android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="28dp"
			    android:text="确认密码:"
			    android:textColor="#000000"
			    android:textSize="14sp"/>
			<EditText android:id="@+id/RePassword" 
		    	android:layout_width="match_parent"
				android:layout_height="wrap_content" 
				android:layout_weight="1.0"
				android:layout_marginRight="28dp"	
				android:password="true"
				android:singleLine="true"/>
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginTop="34dp"
			android:gravity="center_horizontal">
			<ImageButton android:id="@+id/register"
		    	android:layout_width="90dp"
		    	android:layout_height="27dp"
		    	android:background="@drawable/registerbutton"/>
			<ImageButton android:id="@+id/reset"
		    	android:layout_width="90dp"
		    	android:layout_height="27dp"
		    	android:layout_marginLeft="20dp"
		    	android:background="@drawable/login_resetbutton"/>	
		</LinearLayout>
	</LinearLayout>
</LinearLayout>